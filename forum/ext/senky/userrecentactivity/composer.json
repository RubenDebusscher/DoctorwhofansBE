{
    "name": "senky/userrecentactivity",
    "type": "phpbb-extension",
    "description": "Displays a users recent posting activity in the users profile. Displays posts text with bbcode striped and truncated to a length set in the ACP.",
    "version": "2.1.1",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Jakub Senko",
            "email": "jakubsenko@gmail.com",
            "role": "Lead Developer"
        },
        {
            "name": "Ian Taylor",
            "email": "iantaylor603@gmail.com",
            "homepage": "http://ian-taylor.ca",
            "role": "Past Developer (MOD author)"
        }
    ],
    "require": {
        "php": ">=5.4",
        "phpbb/phpbb": ">=3.1.0,<3.3@dev",
        "composer/installers": "~1.0.0"
    },
    "require-dev": {
        "phpbb/epv": "dev-master"
    },
    "extra": {
        "display-name": "User Recent Activity",
        "soft-require": {
            "phpbb/phpbb": ">=3.1.0,<3.3@dev"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/user_recent_activity",
            "filename": "version_check"
        }
    }
}