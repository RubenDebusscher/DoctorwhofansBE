{
    "name": "stevotvr/steamstatus",
    "type": "phpbb-extension",
    "description": "An extension which allows users to add their Steam profile to their forum profile",
    "homepage": "https://github.com/stevotvr/phpbb-steamstatus",
    "version": "1.2.2",
    "license": "GPL-2.0-only",
    "authors": [
        {
            "name": "Steve Guidetti",
            "email": "stevotvr@stevotvr.com",
            "homepage": "https://github.com/stevotvr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "composer/installers": "~1.0.0",
        "phpbb/phpbb": ">=3.2.0"
    },
    "require-dev": {
        "phing/phing": "2.*"
    },
    "extra": {
        "display-name": "Steam Status",
        "soft-require": {
            "phpbb/phpbb": ">=3.2.0"
        },
        "version-check": {
            "host": "www.phpbb.com",
            "directory": "/customise/db/extension/steamstatus",
            "filename": "version_check"
        }
    }
}